<!DOCTYPE HTML>
<html lang = 'en'>
<head>
  <meta charset="utf-8">
        <title>BrainStorm</title>
        <link rel="icon" type="image/x-icon" href="assests/img/favicon.ico"/>
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css"/>    
        <link href="/stylesheets/main.css" rel="stylesheet" type="text/css" media="all">
        <link href="/fontawesome/css/all.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Indie+Flower%7CGloria+Hallelujah%7CKalam%7CRoboto+Condensed%7CMajor+Mono+Display">
</head>
<body>

    <!-- CONTAINER -->

            <div class="container">

                <!-- HEADER -->

                <% include partials/header.ejs %>


                <!--  MAIN NAV  -->

                <% include partials/user-navigation.ejs %>


                <!--  BODY  -->

                <div class="jumbotron container">
                    
                    <!--     BREADCRUMB      -->
      
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
                        <li class="breadcrumb-item" aria-current="page"><%= data.item[0].itemName %></li>
                      </ol>
                    </nav>

                    <div class="row">
                        <div class="col-lg-2 col-sm-12">

                            <!-- SIDENAV -->

                            <% include partials/site-navigation.ejs %>
                        </div>

                        <div id="content" class="item-content col-lg-10 col-sm-12">

                        <!-- MAIN CONTENT -->

                        <div>
                          <img src="<%= data.item[0].imgUrl%>" alt="<%= data.item[0].itemName %>">
                          <%console.log('Image:'+data.imgUrl)%>
                          <div>
                              <br> <br>
                            <a class="button" href="/categories/item/saveit/<%= data.item[0].itemCode %>">Save</a>
                            <a class="button" href="/feedback/<%= data.item[0].itemCode %>">Rate</a>
                              <br> <br>
                          </div>
                        </div>
                        <div>
                          <h4> <%= data.item[0].itemName %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Stars:&nbsp;&nbsp;<%= data.item[0].rating%></h4>
                          <br>
                          <h5> <%= data.item[0].catalogCategory %></h5>
                        </div>
                        <div>
                            <br>
                          <p> <%= data.item[0].description %> <br><br> </p>
                        </div>
                      </div>
                    </div>
                    <div class="back-button"><button class="button" onclick="location.href='/categories'">Back</button></div>
                </div>
                
                <!-- FOOTER -->

                <% include partials/footer.ejs %>

        </div>   
         
    </body>
    
</html>